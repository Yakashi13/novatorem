<svg viewBox="0 0 480 133" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
  <foreignObject width="480" height="133" preserveAspectRatio="xMidYMid meet">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <style>
        /* ✅ Light Theme Glassmorphism card */
        .container {
          width: 100%;
          height: 100%;
          border-radius: 16px;
          padding: 12px;
          box-sizing: border-box;
          background: rgba(255, 255, 255, 0.6);
          backdrop-filter: blur(14px) saturate(180%);
          -webkit-backdrop-filter: blur(14px) saturate(180%);
          border: 1px solid rgba(0, 0, 0, 0.08);
          display: flex;
          align-items: center;
        }

        .main {
          display: flex;
          align-items: center;
          gap: 12px;
          width: 100%;
          height: 100%;
        }

        .art {
          flex-shrink: 0;
        }

        .cover {
          width: 100px;
          height: 100px;
          border-radius: 10px;
          object-fit: cover;
          display: block;
        }

        .content {
          flex: 1;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
          overflow: hidden;
        }

        .song {
          font-size: 22px;
          font-weight: 600;
          margin-top: 2px;
          margin-bottom: 2px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          background-size: 200% 100%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 15s ease infinite;
        }

        .artist {
          font-size: 16px;
          margin-bottom: 6px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            -125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          background-size: 200% 100%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 12s ease infinite;
        }

        #bars {
          display: flex;
          justify-content: center;
          align-items: flex-end;
          gap: 3px;
          height: 20px;
        }

        .bar {
          width: 3px;
          height: 6px;
          border-radius: 2px;
          background: linear-gradient(
            90deg,
            rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}) 0%,
            rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}) 33%,
            rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}) 66%,
            rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }}) 100%
          );
          background-size: 200% 100%;
          animation: gradient 15s ease infinite, pulse 900ms ease-in-out infinite;
          transform-origin: bottom;
        }

        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }

        @keyframes pulse {
          0% { transform: scaleY(0.25); opacity: 0.4; }
          50% { transform: scaleY(1); opacity: 1; }
          100% { transform: scaleY(0.35); opacity: 0.6; }
        }

        a { text-decoration: none; color: inherit; }

        div {
          font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif;
        }

        /* ✅ Mobile tweaks */
        @media (max-width: 480px) {
          .cover {
            width: 100px;
            height: 100px;
          }
          .content {
            align-items: flex-start;
            text-align: left;
          }
          .song {
            font-size: 20px;
          }
          .artist {
            font-size: 15px;
          }
          #bars {
            justify-content: flex-start;
            height: 18px;
          }
        }

        {{barCSS|safe}}
      </style>

      <div class="main">
        <a class="art" href="{}" target="_blank">
          <img src="data:image/png;base64, {{image}}" class="cover" />
        </a>

        <div class="content">
          <a href="{{songURI}}" target="_blank">
            <div class="song">{{songName}}</div>
          </a>
          <a href="{{artistURI}}" target="_blank">
            <div class="artist">{{artistName}}</div>
          </a>
          <div id="bars">{{contentBar|safe}}</div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
