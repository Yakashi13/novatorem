<svg viewBox="0 0 480 133" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
  <foreignObject width="100%" height="100%" preserveAspectRatio="xMidYMid meet">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <style>
        .main {
          display: flex;
          flex-direction: row;
          align-items: center;
          gap: 10px;
        }

        /* ✅ Glassmorphism container */
        .container {
          border-radius: 15px;
          padding: 12px;
          background: rgba(20, 20, 20, 0.55);
          backdrop-filter: blur(12px) saturate(160%);
          -webkit-backdrop-filter: blur(12px) saturate(160%);
          border: 1px solid rgba(255, 255, 255, 0.1);
          width: 100%;
          height: 100%;
          box-sizing: border-box;
        }

        .art {
          flex-shrink: 0;
        }

        .cover {
          width: 90px;
          height: 90px;
          border-radius: 10px;
        }

        .content {
          flex: 1;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          text-align: center;
          overflow: hidden;
        }

        .song {
          font-size: 20px;
          font-weight: 600;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          background-size: 200% 100%;
          background-position: 0% 50%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 15s ease infinite;
        }

        .artist {
          font-size: 16px;
          margin-top: 4px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            -125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          background-size: 200% 100%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 12s ease infinite;
        }

        /* ✅ Audio bars visible on ALL screens */
        #bars {
          margin-top: 10px;
          display: flex;
          justify-content: center;
          gap: 2px;
        }

        .bar {
          width: 3px;
          height: 15px;
          background: linear-gradient(
            90deg,
            rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}) 0%,
            rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}) 33%,
            rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}) 66%,
            rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }}) 100%
          );
          border-radius: 2px;
          animation: pulse 0ms -800ms ease-in infinite alternate, gradient 15s ease infinite;
        }

        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }

        @keyframes pulse {
          0% { height: 4px; opacity: .35; }
          100% { height: 18px; opacity: .95; }
        }

        a {
          text-decoration: none;
        }

        div {
          font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif;
        }

        /* ✅ Mobile Responsiveness */
        @media (max-width: 600px) {
          .main {
            flex-direction: column;
            text-align: center;
          }
          .cover {
            width: 80px;
            height: 80px;
          }
          .song {
            font-size: 18px;
          }
          .artist {
            font-size: 14px;
          }
          #bars {
            margin-top: 6px;
          }
        }

        {{barCSS|safe}}
      </style>

      <div class="main">
        <a class="art" href="{}" target="_blank">
          <img src="data:image/png;base64, {{image}}" class="cover" />
        </a>

        <div class="content">
          <a href="{{songURI}}" target="_blank">
            <div class="song">{{songName}}</div>
          </a>
          <a href="{{artistURI}}" target="_blank">
            <div class="artist">{{artistName}}</div>
          </a>
          <div id="bars">{{contentBar|safe}}</div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
