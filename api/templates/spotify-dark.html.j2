<svg viewBox="0 0 480 133" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <foreignObject width="480" height="133">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <style>
        /* Reset */
        * { box-sizing: border-box; margin: 0; padding: 0; }
        div { font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif; }
        a { text-decoration: none; }

        /* Container */
        .container {
          display: flex;
          flex-direction: row;
          align-items: center;
          padding: 10px;
          border-radius: 15px;
          background: rgba(20, 20, 30, 0.6);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          width: 100%;
          max-width: 480px;
          overflow: hidden;
          position: relative;
        }

        .main { display: flex; flex: 1; align-items: center; gap: 10px; }

        /* Album Art */
        .art { flex: 0 0 100px; }
        .cover { width: 100px; height: 100px; border-radius: 12px; object-fit: cover; }

        /* Content */
        .content {
          flex: 1;
          display: flex;
          flex-direction: column;
          justify-content: center;
          min-width: 0;
        }

        .song, .artist {
          overflow: hidden;
          white-space: nowrap;
          text-overflow: ellipsis;
        }

        .song {
          font-size: 24px;
          font-weight: 600;
          background: linear-gradient(
            125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: gradient 15s ease infinite;
        }

        .artist {
          font-size: 20px;
          color: #bbb;
          background: linear-gradient(
            -125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: gradient 12s ease infinite;
          margin-top: 4px;
        }

        /* Bars */
        #bars {
          position: relative;
          width: 100%;
          height: 20px;
          margin-top: 6px;
        }

        .bar {
          position: absolute;
          bottom: 0;
          width: 3px;
          background: linear-gradient(
            90deg,
            rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}) 0%, 
            rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}) 33%, 
            rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}) 66%, 
            rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }}) 100%
          );
          background-size: 200% 100%;
          animation: pulse 1s infinite ease-in-out alternate;
        }

        /* Stagger bar positions */
        {% for i in range(barCount) %}
        .bar:nth-child({{i+1}}) {
          left: {{ i * 6 }}px;
          animation-delay: {{ i * 0.1 }}s;
        }
        {% endfor %}

        /* Animations */
        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }

        @keyframes pulse {
          0% { height: 3px; opacity: 0.35; }
          100% { height: 15px; opacity: 0.95; }
        }

        /* Responsive */
        @media (max-width: 480px) {
          .container { flex-direction: column; padding: 10px; }
          .main { flex-direction: row; gap: 10px; }
          .cover { width: 80px; height: 80px; }
          .song { font-size: 20px; }
          .artist { font-size: 16px; }
          #bars { height: 15px; }
        }
      </style>

      <div class="main">
        <a class="art" href="{{songURI}}" target="_blank">
          <img src="data:image/png;base64, {{image}}" class="cover" />
        </a>

        <div class="content">
          <a href="{{songURI}}" target="_blank">
            <div class="song">{{songName}}</div>
          </a>
          <a href="{{artistURI}}" target="_blank">
            <div class="artist">{{artistName}}</div>
          </a>
          <div id="bars">
            {% for i in range(barCount) %}
            <div class="bar"></div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
