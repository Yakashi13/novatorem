<svg viewBox="0 0 480 133" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <foreignObject width="480" height="133">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <style>
        /* Reset */
        * {
          box-sizing: border-box;
          margin: 0;
          padding: 0;
        }

        div {
          font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
        }

        a {
          text-decoration: none;
        }

        /* Container with glassmorphism */
        .container {
          display: flex;
          flex-direction: row;
          align-items: center;
          padding: 10px;
          border-radius: 15px;
          background: rgba(20, 20, 30, 0.6); /* dark semi-transparent */
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          width: 100%;
          max-width: 480px;
          margin: auto;
          overflow: hidden;
          position: relative;
        }

        .main {
          display: flex;
          flex: 1;
          align-items: center;
          gap: 10px;
        }

        /* Album Art */
        .art {
          flex: 0 0 80px;
        }

        .cover {
          width: 80px;
          height: 80px;
          border-radius: 12px;
          object-fit: cover;
        }

        /* Song Info */
        .content {
          flex: 1;
          display: flex;
          flex-direction: column;
          justify-content: center;
          gap: 4px;
          min-width: 0;
        }

        .song, .artist {
          overflow: hidden;
          white-space: nowrap;
          text-overflow: ellipsis;
          font-weight: 600;
        }

        .song {
          font-size: 18px;
          background: linear-gradient(
            125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: gradient 15s ease infinite;
        }

        .artist {
          font-size: 14px;
          color: #bbb;
          background: linear-gradient(
            -125deg,
            rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
            rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
          );
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          animation: gradient 12s ease infinite;
        }

        /* Bars Animation */
        #bars {
          display: flex;
          gap: 3px;
          margin-top: 4px;
        }

        .bar {
          flex: 1;
          height: 15px;
          background: linear-gradient(
            90deg,
            rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}) 0%,
            rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}) 33%,
            rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}) 66%,
            rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }}) 100%
          );
          background-size: 200% 100%;
          animation: gradient 15s ease infinite, pulse 1s ease-in-out infinite alternate;
        }

        /* Animations */
        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }

        @keyframes pulse {
          0% { height: 5px; opacity: 0.4; }
          100% { height: 15px; opacity: 1; }
        }

        /* Responsive */
        @media (max-width: 480px) {
          .container {
            flex-direction: column;
            padding: 10px 8px;
            border-radius: 12px;
          }

          .main {
            flex-direction: row;
            gap: 8px;
          }

          .cover {
            width: 60px;
            height: 60px;
          }

          .song {
            font-size: 16px;
          }

          .artist {
            font-size: 12px;
          }

          #bars .bar {
            height: 10px;
          }
        }
      </style>

      <div class="main">
        <a class="art" href="{{songURI}}" target="_blank">
          <img src="data:image/png;base64, {{image}}" class="cover" />
        </a>

        <div class="content">
          <a href="{{songURI}}" target="_blank">
            <div class="song">{{songName}}</div>
          </a>
          <a href="{{artistURI}}" target="_blank">
            <div class="artist">{{artistName}}</div>
          </a>
          <div id="bars">{{contentBar|safe}}</div>
        </div>
      </div>
    </div>
  </foreignObject>
</svg>
