<svg viewbox="0 0 480 133" preserveaspectratio="xmidymid meet" xmlns="http://www.w3.org/2000/svg">
  <foreignobject width="480" height="133" preserveaspectratio="xmidymid meet">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      <style>
        /* ✅ glassmorphism card */
        .container {
          width: 100%;
          height: 100%;
          border-radius: 12px; /* Adjusted border-radius for more roundy rectangular */
          padding: 12px;
          box-sizing: border-box;
          background: rgba({{ songpalette[0][0] }}, {{ songpalette[0][1] }}, {{ songpalette[0][2] }}, 0.15); /* new tinted background */
          backdrop-filter: blur(14px) saturate(180%);
          -webkit-backdrop-filter: blur(14px) saturate(180%);
          border: 1px solid transparent; /* Changed border to 1px and transparent for animation */
          display: flex;
          align-items: center;
          position: relative; /* Added for absolute positioning of the animated border */
          overflow: hidden; /* Hide overflow of the animated border */
        }

        /* Animated border for the container */
        .container::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          border-radius: inherit; /* Inherit border-radius from container */
          padding: 1px; /* The thickness of the animated border */
          background: linear-gradient(
            90deg,
            rgb({{ barpalette[0][0] }}, {{ barpalette[0][1] }}, {{ barpalette[0][2] }}) 0%,
            rgb({{ barpalette[1][0] }}, {{ barpalette[1][1] }}, {{ barpalette[1][2] }}) 33%,
            rgb({{ barpalette[2][0] }}, {{ barpalette[2][1] }}, {{ barpalette[2][2] }}) 66%,
            rgb({{ barpalette[3][0] }}, {{ barpalette[3][1] }}, {{ barpalette[3][2] }}) 100%
          );
          background-size: 200% 100%;
          -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
          mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
          -webkit-mask-composite: xor;
          mask-composite: exclude;
          animation: gradient 15s ease infinite; /* Apply gradient animation */
          z-index: -1; /* Place behind the content */
        }


        .main {
          display: flex;
          align-items: center;
          gap: 12px;
          width: 100%;
          height: 100%;
        }

        .art {
          flex-shrink: 0;
        }

        .cover {
          width: 100px;
          height: 100px;
          border-radius: 8px; /* Slightly less rounded than container for a nice contrast */
          object-fit: cover;
          display: block;
        }

        .content {
          flex: 1;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          text-align: center;
          overflow: hidden;
        }

        .song {
          font-size: 22px;
          font-weight: 600;
          margin-top: 2px;
          margin-bottom: 2px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            125deg,
            rgb({{ songpalette[0][0] }}, {{ songpalette[0][1] }}, {{ songpalette[0][2] }}),
            rgb({{ songpalette[1][0] }}, {{ songpalette[1][1] }}, {{ songpalette[1][2] }})
          );
          background-size: 200% 100%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 15s ease infinite;
        }

        .artist {
          font-size: 16px;
          margin-bottom: 6px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
          max-width: 100%;
          background: linear-gradient(
            -125deg,
            rgb({{ songpalette[0][0] }}, {{ songpalette[0][1] }}, {{ songpalette[0][2] }}),
            rgb({{ songpalette[1][0] }}, {{ songpalette[1][1] }}, {{ songpalette[1][2] }})
          );
          background-size: 200% 100%;
          -webkit-text-fill-color: transparent;
          -webkit-background-clip: text;
          animation: gradient 12s ease infinite;
        }

        #bars {
          display: flex;
          justify-content: center;
          align-items: flex-end;
          gap: 3px;
          height: 20px;
        }

        .bar {
          width: 3px;
          height: 6px;
          border-radius: 2px;
          background: linear-gradient(
            90deg,
            rgb({{ barpalette[0][0] }}, {{ barpalette[0][1] }}, {{ barpalette[0][2] }}) 0%,
            rgb({{ barpalette[1][0] }}, {{ barpalette[1][1] }}, {{ barpalette[1][2] }}) 33%,
            rgb({{ barpalette[2][0] }}, {{ barpalette[2][1] }}, {{ barpalette[2][2] }}) 66%,
            rgb({{ barpalette[3][0] }}, {{ barpalette[3][1] }}, {{ barpalette[3][2] }}) 100%
          );
          background-size: 200% 100%;
          animation: gradient 15s ease infinite, pulse 900ms ease-in-out infinite;
          transform-origin: bottom;
        }

        @keyframes gradient {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }

        @keyframes pulse {
          0% { transform: scaley(0.25); opacity: 0.4; }
          50% { transform: scaley(1); opacity: 1; }
          100% { transform: scaley(0.35); opacity: 0.6; }
        }

        a { text-decoration: none; color: inherit; }

        div {
          font-family: -apple-system, blinkmacsystemfont, "segoe ui", helvetica, arial, sans-serif;
        }

        /* ✅ mobile tweaks */
        @media (max-width: 480px) {
          .cover {
            width: 100px;
            height: 100px;
          }
          .content {
            align-items: flex-start;
            text-align: left;
          }
          .song {
            font-size: 20px;
          }
          .artist {
            font-size: 15px;
          }
          #bars {
            justify-content: flex-start;
            height: 18px;
          }
        }

        {{barcss|safe}}
      </style>

      <div class="main">
        <a class="art" href="{}" target="_blank">
          <img src="data:image/png;base64, {{image}}" class="cover" />
        </a>

        <div class="content">
          <a href="{{songuri}}" target="_blank">
            <div class="song">{{songname}}</div>
          </a>
          <a href="{{artisturi}}" target="_blank">
            <div class="artist">{{artistname}}</div>
          </a>
          <div id="bars">{{contentbar|safe}}</div>
        </div>
      </div>
    </div>
  </foreignobject>
</svg>
